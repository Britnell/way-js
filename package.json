{
  "name": "way",
  "version": "0.1.0",
  "description": "A reactive web framework with Alpine.js-like directives",
  "type": "module",
  "main": "./src/way.ts",
  "types": "./src/way.ts",
  "exports": {
    ".": {
      "types": "./src/way.ts",
      "import": "./src/way.ts"
    },
    "./dist": {
      "import": "./way.min.js"
    },
    "./loader": {
      "import": "./public/way-loader.js"
    }
  },
  "files": [
    "src/way.ts",
    "way.min.js",
    "public/way-loader.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "bundle": "rollup -c"
  },
  "keywords": [
    "way",
    "reactive",
    "alpine",
    "signals",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@preact/signals-core": "^1.12.1",
    "@tailwindcss/vite": "^4.1.14",
    "tailwindcss": "^4.1.14",
    "valibot": "^1.1.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  }
}
